workspace(name = "tapoc2")

bind(
  name = "zlib",
  actual = "//third_party/zlib",
)

bind(
  name = "libssl",
  actual = "//google/boringssl:ssl",
)

# Protobuf compiler binary
bind(
  name = "protoc",
  actual = "//google/protobuf:protoc"
)

# Library needed to build protobuf codegen plugin.
bind(
  name = "protobuf_compiler",
  actual = "//google/protobuf:protoc_lib",
)

# Library that C++ code generated by protobuf C compiler should depend
# on.
bind(
  name = "protobuf_clib",
  actual = "//google/protobuf:protobuf",
)

# GRPC codegen plugin
bind(
  name = "grpc_cpp_plugin",
  actual = "//google/grpc:grpc_cpp_plugin"
)

# GRPC C++ runtime library
bind(
  name = "grpc++",
  actual = "//google/grpc:grpc++"
)

new_git_repository(
  name = "googletest",
  remote = "https://github.com/google/googletest.git",
  commit = "71a26ac68b28c61686b8941730a6b2577912e239",
  build_file = "googletest.BUILD",
)

