workspace(name = "tapoc2")

# Zlib
bind(
  name = "zlib",
  actual = "//third_party/zlib:z",
)

# Boringssl FTW!
bind(
  name = "libssl",
  actual = "//google/boringssl:ssl",
)

# Protobuf compiler binary
bind(
  name = "protoc",
  actual = "//google/protobuf:protoc"
)

# Library needed to build protobuf codegen plugin.
bind(
  name = "protobuf_compiler",
  actual = "//google/protobuf:protoc_lib",
)

# Library that C++ code generated by protobuf C compiler should depend
# on.
bind(
  name = "protobuf_clib",
  actual = "//google/protobuf:protobuf",
)

# GRPC codegen plugin
bind(
  name = "grpc_cpp_plugin",
  actual = "//google/grpc:grpc_cpp_plugin"
)

# GRPC C++ runtime library
bind(
  name = "grpc++",
  actual = "//google/grpc:grpc++"
)

# Logger
bind(
  name = "glog",
  actual = "//google/glog:glog"
)

# Gflags
bind(
  name = "gflags",
  actual = "//google/gflags:gflags"
)

# Gtest
bind(
  name = "gtest",
  actual = "//google/googletest:googletest"
)

# GMock
bind(
  name = "gmock",
  actual = "//google/googletest:googlemock"
)

# WebP
bind(
  name = "libwebp",
  actual = "//google/libwebp:libwebp"
)

# Libpng
bind(
  name = "libpng",
  actual = "//third_party/libpng:png"
)

# Libjpeg-turbo
bind(
  name = "libjpeg",
  actual = "//third_party/libjpeg_turbo:jpeg_turbo"
)
